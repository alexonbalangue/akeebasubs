<?xml version="1.0" encoding="utf-8"?>
<extension version="3.3.0" type="plugin" group="akpayment" method="upgrade">
	<name>PLG_AKPAYMENT_PAYMILL</name>
	<author>Nicholas K. Dionysopoulos</author>
	<authorEmail>nicholas@dionysopoulos.me</authorEmail>
	<authorUrl>http://www.akeebabackup.com</authorUrl>
	<copyright>Copyright (c)2011-2016 Nicholas K. Dionysopoulos</copyright>
	<license>GNU General Public License version 3, or later</license>
	<creationDate>April 2015</creationDate>
	<version>5.0</version>
	<description>PLG_AKPAYMENT_PAYMILL_DESCRIPTION</description>
	<files>
		<filename plugin="paymill">paymill.php</filename>
		<folder>paymill</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_paymill.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_akpayment_paymill.sys.ini</language>
	</languages>
	<config addfieldpath="administrator/components/com_akeebasubs/assets/elements">
		<fields name="params">
			<fieldset name="basic">
				<field name="title" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYMILL_TITLE_LABEL" description="PLG_AKPAYMENT_PAYMILL_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYMILL_PPIMAGE_LABEL" description="PLG_AKPAYMENT_PAYMILL_PPIMAGE_DESC" />
				<field type="spacer" />
				<field name="surcharge" type="text" size="50" default="" label="PLG_AKPAYMENT_COMMON_SURCHARGE_LABEL" description="PLG_AKPAYMENT_COMMON_SURCHARGE_DESC"/>
				<field name="typeCountryList" type="list" default="2"
					   label="PLG_AKPAYMENT_COMMON_COUNTRYLIST_TYPE_LABEL"
					   description="PLG_AKPAYMENT_COMMON_COUNTRYLIST_TYPE_DESC"
						>
					<option value="1">PLG_AKPAYMENT_COMMON_COUNTRYLIST_INCLUDE</option>
					<option value="2">PLG_AKPAYMENT_COMMON_COUNTRYLIST_EXCLUDE</option>
				</field>
				<field name="countryList" type="akeebasubscountries" default=""
					   multiple="true" size="5"
					   label="PLG_AKPAYMENT_COMMON_COUNTRYLIST_LABEL" />
        <field name="countryPriority" type="akeebasubscountries" default=""
               multiple="true" size="5"
               label="PLG_AKPAYMENT_COMMON_COUNTRYPIORITY_LABEL"
               description="PLG_AKPAYMENT_COMMON_COUNTRYPIORITY_DESC"
        />

				<field type="spacer" />
				<field name="private_key" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYMILL_PRIVKEY_LABEL" description="PLG_AKPAYMENT_PAYMILL_PRIVKEY_DESC"/>
				<field name="public_key" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYMILL_PUBKEY_LABEL" description="PLG_AKPAYMENT_PAYMILL_PUBKEY_DESC"/>
				<field type="spacer" />
				<field name="sb_private_key" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYMILL_SBPRIVKEY_LABEL" description="PLG_AKPAYMENT_PAYMILL_SBPRIVKEY_DESC"/>
				<field name="sb_public_key" type="text" size="50" default="" label="PLG_AKPAYMENT_PAYMILL_SBPUBKEY_LABEL" description="PLG_AKPAYMENT_PAYMILL_SBPUBKEY_DESC"/>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_AKPAYMENT_PAYMILL_SANDBOX_LABEL" description="PLG_AKPAYMENT_PAYMILL_SANDBOX_DESC">
				  <option value="0">JNo</option>
				  <option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
